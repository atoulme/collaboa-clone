<% instance_variable_name ||= 'ticket' %>
<table>
  <tr>
    <td>Status:</td>
    <td><%= collection_select instance_variable_name, 'status_id', @statuses, 'id', 'name' %></td>
    <td>Affected Release:</td>
    <td><%= collection_select instance_variable_name, 'release_id', @releases, 'id', 'name', { :include_blank => true } %></td>
  </tr>
  <tr>
    <td>Priority:</td>
    <td><%= collection_select instance_variable_name, 'priority_id', @priorities, 'id', 'name' %></td>
    <td>Target Milestone:</td>
    <td><%= collection_select instance_variable_name, 'milestone_id', @milestones, 'id', 'name', { :include_blank => true } %></td>
  </tr>
  <tr>
    <td>Component:</td>
    <td><%= collection_select instance_variable_name, 'component_id', @components, 'id', 'name', { :include_blank => true } %></td>
		<td>Assigned To:</td>
		<td ><%= collection_select instance_variable_name, 'assigned_user_id', @users, 'id', 'login', { :include_blank => true } %></td>
  </tr>
</table>