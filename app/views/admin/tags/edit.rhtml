<div id="content">
<%= error_messages_for :tag %>

<% form_for :tag do |f| -%>
<p><label for="name">Name</label><br/>
<%= f.text_field :name, :value => @tag.name %></p>

<p><label for="description">Description (you can use Textile markup)</label><br/>
<%= f.text_area :description, :value => @tag.description %></p>

<p><%= submit_tag 'Save changes' %></p>
<% end -%>


</div>

