<div id="content">


<ul>
<% for category in Category.find(:all) %>
<li><%= category.name %> <%= link_to "Edit", :action => "edit", :id => category.id %> <%= link_to "Delete", {:action => "delete", :id => category.id}, :confirm => "Are you sure you want to delete this category ?" %></li>
<p><%= textilize category.description %></p>

<% end %>
</ul>

<br/>
<%= link_to "Create a new category", :action => "create" %>
</div>
